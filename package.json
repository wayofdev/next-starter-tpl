{
    "name": "next-starter-tpl",
    "description": "A monorepo boilerplate using pnpm, turborepo and nextjs",
    "version": "1.0.0",
    "private": true,
    "author": "lotyp7@gmail.com",
    "license": "MIT",
    "homepage": "https://wayof.dev",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "keywords": [
        "template",
        "boilerplate",
        "nextjs",
        "vercel",
        "turbo",
        "turbopack",
        "wayofdev",
        "monorepo",
        "turborepo",
        "pnpm"
    ],
    "scripts": {
        "commit": "git-cz",
        "prepare": "husky install",
        "clean": "turbo run clean --parallel",
        "build": "turbo run build --parallel",
        "build:prod": "turbo run build --parallel",
        "dev": "turbo run dev --parallel",
        "start": "turbo run start",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "test": "turbo run test --parallel",
        "test:watch": "turbo run test:watch",
        "test:prod": "turbo run test:prod --parallel",
        "lint": "pnpm lint:md && pnpm lint:js && pnpm lint:html && pnpm lint:secrets",
        "lint:md": "markdownlint --fix **/*.md --ignore '**/node_modules/**' --ignore '**/CHANGELOG.md'",
        "lint:js": "eslint --fix **/*.{js,ts,tsx}",
        "lint:css": "stylelint --fix **/*.{css,scss}",
        "lint:html": "htmlhint --config ./node_modules/@wayofdev/htmlhint-config/index.json **/*.html",
        "lint:secrets": "npx secretlint **/*"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.3.0",
        "@wayofdev/commitlint-config": "^1.0.1",
        "@wayofdev/eslint-config": "^1.0.1",
        "@wayofdev/htmlhint-config": "^1.0.0",
        "@wayofdev/lint-staged-config": "^1.0.1",
        "@wayofdev/markdownlint-config": "^1.0.1",
        "@wayofdev/prettier-config": "^1.0.1",
        "@wayofdev/secretlint-config": "^1.0.4",
        "@wayofdev/stylelint-config": "^1.0.0",
        "eslint": "^8.30.0",
        "eslint-config-custom": "workspace:0.0.0",
        "htmlhint": "^1.1.4",
        "husky": "^8.0.2",
        "lint-staged": "^13.1.0",
        "markdownlint": "^0.26.2",
        "markdownlint-cli": "^0.32.2",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.20",
        "prettier": "^2.8.1",
        "secretlint": "^5.3.0",
        "stylelint": "^14.16.0",
        "turbo": "latest",
        "typescript": "^4.9.4"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "packageManager": "pnpm@7.18.2"
}
