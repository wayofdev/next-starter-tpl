{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "exclude": ["**/node_modules", "**/.*/", "dist", "build"],
  "include": ["./src/**/*"],
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "outDir": "dist",
    "allowJs": true,
    "jsx": "react-jsx",
    "noEmit": false,
    "verbatimModuleSyntax": false
  }
}
